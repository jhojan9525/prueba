<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:src="@mipmap/perfil"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Artista"
        android:textColor="@color/Black"
        android:layout_marginTop="170sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170sp"
        android:layout_marginLeft="155sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de artista"
        android:textColor="@color/Black"
        android:layout_marginTop="230sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230sp"
        android:layout_marginLeft="155sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biografia corta de artista"
        android:textColor="@color/Black"
        android:layout_marginTop="300sp"
        android:layout_marginLeft="15sp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300sp"
        android:layout_marginLeft="255sp"
        android:inputType="textMultiLine" />

</RelativeLayout>